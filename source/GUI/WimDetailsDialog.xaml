<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WIM Details"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FFFFFF"
        FontFamily="Segoe UI">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderText"
                   Grid.Row="0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#2B579A"
                   Margin="0,0,0,8" />

        <ListView x:Name="WimDetailsList"
                  Grid.Row="1"
                  SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"
                                    Width="180"
                                    DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Path"
                                    Width="220"
                                    DisplayMemberBinding="{Binding Path}" />
                    <GridViewColumn Header="Index"
                                    Width="60"
                                    DisplayMemberBinding="{Binding Index}" />
                    <GridViewColumn Header="Architecture"
                                    Width="90"
                                    DisplayMemberBinding="{Binding Architecture}" />
                    <GridViewColumn Header="Version"
                                    Width="110"
                                    DisplayMemberBinding="{Binding Version}" />
                    <GridViewColumn Header="Size (GB)"
                                    Width="80"
                                    DisplayMemberBinding="{Binding SizeGB}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="2"
              Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="#2B579A" />

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                <Button x:Name="CopyDetailsButton"
                        Content="Copy Details"
                        Margin="0,0,10,0" />
                <Button x:Name="RefreshButton"
                        Content="Refresh"
                        Margin="0,0,10,0" />
                <Button x:Name="CloseButton"
                        Content="Close" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
