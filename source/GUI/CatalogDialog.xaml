<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Catalog Search"
        Height="560"
        Width="920"
        WindowStartupLocation="CenterOwner"
        Background="#FFFFFF"
        FontFamily="Segoe UI">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0">
            <TextBox x:Name="SearchTextBox"
                     Width="420"
                     Margin="0,0,8,0"
                     VerticalAlignment="Center"
                     ToolTip="Search term or KB number" />
            <Button x:Name="SearchButton"
                    Content="Search"
                    Width="90" />
        </StackPanel>

        <Grid Grid.Row="1"
              Margin="0,10,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Vertical"
                        Margin="0,0,12,0">
                <TextBlock Text="Operating system"
                           Margin="0,0,0,4" />
                <ComboBox x:Name="OperatingSystemComboBox"
                          Width="190" />
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        Margin="0,0,12,0">
                <TextBlock Text="Release"
                           Margin="0,0,0,4" />
                <ComboBox x:Name="ReleaseComboBox"
                          Width="170" />
            </StackPanel>

            <StackPanel Grid.Column="2"
                        Orientation="Vertical"
                        Margin="0,0,12,0">
                <TextBlock Text="Architecture"
                           Margin="0,0,0,4" />
                <ComboBox x:Name="ArchitectureComboBox"
                          Width="150" />
            </StackPanel>

            <StackPanel Grid.Column="3"
                        Orientation="Vertical">
                <TextBlock Text="Update type"
                           Margin="0,0,0,4" />
                <ComboBox x:Name="UpdateTypeComboBox"
                          Width="190" />
            </StackPanel>
        </Grid>

        <WrapPanel Grid.Row="2"
                   Margin="0,0,0,8">
            <CheckBox x:Name="AllPagesCheckBox"
                      Content="All pages"
                      Margin="0,0,12,6" />
            <CheckBox x:Name="IncludePreviewCheckBox"
                      Content="Include preview"
                      Margin="0,0,12,6" />
            <CheckBox x:Name="IncludeDynamicCheckBox"
                      Content="Include dynamic"
                      Margin="0,0,12,6" />
            <CheckBox x:Name="GetFrameworkCheckBox"
                      Content="Only .NET Framework"
                      Margin="0,0,12,6" />
            <CheckBox x:Name="ExcludeFrameworkCheckBox"
                      Content="Exclude .NET Framework"
                      Margin="0,0,12,6" />
            <CheckBox x:Name="StrictCheckBox"
                      Content="Strict phrase"
                      Margin="0,0,12,6" />
            <CheckBox x:Name="IncludeFileNamesCheckBox"
                      Content="Include filenames"
                      Margin="0,0,12,6" />
            <TextBlock Text="Last days:"
                       VerticalAlignment="Center"
                       Margin="16,0,4,0" />
            <TextBox x:Name="LastDaysTextBox"
                     Width="60"
                     Margin="0,0,12,0" />
            <TextBlock Text="Min size:"
                       VerticalAlignment="Center"
                       Margin="0,0,4,0" />
            <TextBox x:Name="MinSizeTextBox"
                     Width="60"
                     Margin="0,0,8,0" />
            <TextBlock Text="Max size:"
                       VerticalAlignment="Center"
                       Margin="0,0,4,0" />
            <TextBox x:Name="MaxSizeTextBox"
                     Width="60"
                     Margin="0,0,8,0" />
            <ComboBox x:Name="SizeUnitComboBox"
                      Width="80">
                <ComboBoxItem Content="MB"
                              IsSelected="True" />
                <ComboBoxItem Content="GB" />
            </ComboBox>
        </WrapPanel>

        <ListView x:Name="ResultsList"
                  Grid.Row="3"
                  SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title"
                                    Width="340"
                                    DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Classification"
                                    Width="130"
                                    DisplayMemberBinding="{Binding Classification}" />
                    <GridViewColumn Header="Last Updated"
                                    Width="130"
                                    DisplayMemberBinding="{Binding LastUpdated}" />
                    <GridViewColumn Header="Size"
                                    Width="90"
                                    DisplayMemberBinding="{Binding Size}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="CatalogStatusText"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="#2B579A" />
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                <Button x:Name="DownloadButton"
                        Content="Download Selected"
                        Margin="0,0,10,0" />
                <Button x:Name="CopyButton"
                        Content="Copy Details"
                        Margin="0,0,10,0" />
                <Button x:Name="CloseButton"
                        Content="Close" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
