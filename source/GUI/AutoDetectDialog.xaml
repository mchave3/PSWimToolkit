<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Detected Updates"
        Height="560"
        Width="920"
        WindowStartupLocation="CenterOwner"
        Background="#FFFFFF"
        FontFamily="Segoe UI">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Updates that match the selected WIM images."
                   FontSize="15"
                   FontWeight="SemiBold"
                   Foreground="#2B579A"
                   Margin="0,0,0,6" />

        <Grid Grid.Row="1"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Download path:"
                       VerticalAlignment="Center"
                       Grid.Column="0"
                       Margin="0,0,8,0" />
            <TextBox x:Name="DownloadPathTextBox"
                     Grid.Column="1"
                     Margin="0,0,8,0" />
            <Button x:Name="BrowseDownloadPathButton"
                    Grid.Column="2"
                    Content="Browse..." />
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <TextBlock Text="Update type:"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0" />
            <ComboBox x:Name="AutoDetectUpdateTypeComboBox"
                      Width="220" />
            <CheckBox x:Name="AutoDetectIncludePreviewCheckBox"
                      Content="Include preview updates"
                      Margin="16,0,0,0" />
        </StackPanel>

        <ListView x:Name="AutoDetectResults"
                  Grid.Row="3"
                  SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="WIM"
                                    Width="180"
                                    DisplayMemberBinding="{Binding WimName}" />
                    <GridViewColumn Header="Index"
                                    Width="60"
                                    DisplayMemberBinding="{Binding Index}" />
                    <GridViewColumn Header="KB"
                                    Width="80"
                                    DisplayMemberBinding="{Binding KB}" />
                    <GridViewColumn Header="Title"
                                    Width="280"
                                    DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Classification"
                                    Width="120"
                                    DisplayMemberBinding="{Binding Classification}" />
                    <GridViewColumn Header="Last Updated"
                                    Width="120"
                                    DisplayMemberBinding="{Binding LastUpdated}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="4"
              Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="AutoDetectStatusText"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="#2B579A" />

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                <Button x:Name="QueueDownloadButton"
                        Content="Download Selected"
                        Margin="0,0,10,0" />
                <Button x:Name="CopyUpdatesButton"
                        Content="Copy Details"
                        Margin="0,0,10,0" />
                <Button x:Name="CloseButton"
                        Content="Close" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
